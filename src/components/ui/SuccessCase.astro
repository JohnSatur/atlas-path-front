---
import { Image } from 'astro:assets';

// SuccessCase.astro
export interface Props {
  title: string;
  description: string;
  image: ImageMetadata;
  link: string;
}

const { title, description, image, link } = Astro.props;
---

<div class="success-case bg-white rounded-xl shadow-lg overflow-hidden transform transition-all duration-300 hover:scale-105 hover:shadow-xl">
  <div class="relative aspect-video">
    <Image src={image} alt={title} class="w-full h-full object-cover" />
    <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
  </div>
  <div class="p-6">
    <h3 class="text-xl font-bold text-gray-800 mb-2">{title}</h3>
    <p class="text-gray-600 mb-4">{description}</p>
    <a href={link} class="inline-flex items-center text-brand-600 hover:text-brand-800 font-medium transition-colors duration-300">
      Leer m√°s
