---
export interface Props {
  title: string;
  excerpt: string;
  date: string;
  author: string;
  image: string;
  link: string;
}

const { title, excerpt, date, author, image, link } = Astro.props;
---

<article class="featured-post bg-white rounded-lg shadow-md overflow-hidden transition-all duration-300 hover:shadow-xl">
  <a href={link} class="block">
    <img src={image} alt={title} class="w-full h-48 object-cover" />
    <div class="p-6">
      <h3 class="text-xl font-bold text-gray-800 mb-2 line-clamp-2">{title}</h3>
      <p class="text-gray-600 mb-4 line-clamp-3">{excerpt}</p>
      <div class="flex justify-between items-center text-sm text-gray-500">
        <span>{author}</span>
        <time datetime={date}>{new Date(date).toLocaleDateString('es-ES', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
      </div>
    </div>
  </a>
</article>
