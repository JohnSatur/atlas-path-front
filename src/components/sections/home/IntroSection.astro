---
import { Image } from 'astro:assets';

import temp1 from '@images/temp1.png';
import Button from '@/components/ui/Button.astro';

---

<section class="py-16">
  <div class="container mx-auto px-4">
    <!-- Header Section -->
  <div class="mb-8">
    <span class="text-brand-600 font-extrabold mb-2 block font-body text-2xl">Quiénes somos</span>
    <h1 class="text-5xl font-bold mb-6 font-title">Conoce a tus próximos estrategas</h1>
    <Button text="Ver instalaciones" />
  </div>

  <!-- Main Content -->
  <div class="grid lg:grid-cols-2 gap-12 items-center mb-20">
    <div class="space-y-6">
      <p class="text-gray-600 text-lg leading-relaxed max-w-2xl">Lorem ipsum dolor sit amet consectetur, adipisicing elit. Voluptatum amet ipsum vitae libero nemo sed fugit sit? Ipsa ad minus, consequuntur labore sequi eaque officia.</p>
    </div>

    <div class="relative">
      <div class="grid gap-6">
        <div class="rounded-2xl overflow-hidden shadow-lg">
          <Image src={ temp1 } alt="Team collaboration" width="736" />
        </div>
      </div>
    </div>
  </div>
</section>
