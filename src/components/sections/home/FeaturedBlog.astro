---
import FeaturedBlogPost from '@components/ui/FeaturedBlogPost.astro';
import blogTemp1 from '@images/blog-temp-1.jpg';
import blogTemp2 from '@images/blog-temp-2.jpg';
import blogTemp3 from '@images/blog-temp-3.jpg';

const featuredPosts = [
  {
    title: '10 Tendencias de Diseño Web para 2024',
    excerpt: 'Descubre las últimas tendencias en diseño web que dominarán el próximo año y cómo implementarlas en tus proyectos.',
    date: '2023-12-15',
    author: 'Ana Martínez',
    image: blogTemp1,
    link: '/blog/tendencias-diseno-web-2024'
  },
  {
    title: 'Cómo Optimizar tu Estrategia de Marketing Digital',
    excerpt: 'Aprende técnicas avanzadas para mejorar tu presencia online y aumentar la conversión en tus campañas de marketing digital.',
    date: '2023-12-01',
    author: 'Carlos Rodríguez',
    image: blogTemp2,
    link: '/blog/optimizar-estrategia-marketing-digital'
  },
  {
    title: 'El Impacto de la Inteligencia Artificial en el Desarrollo de Software',
    excerpt: 'Explora cómo la IA está transformando la industria del desarrollo de software y qué significa esto para el futuro de la programación.',
    date: '2023-11-20',
    author: 'Laura Sánchez',
    image: blogTemp3,
    link: '/blog/impacto-ia-desarrollo-software'
  }
];
---

<section class="py-16">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center mb-12">
      <h2 class="text-3xl font-bold text-gray-800">Blog Destacado</h2>
      <a href="/blog" class="inline-flex items-center px-6 py-3 bg-brand-600 text-white font-semibold rounded-lg transition-colors duration-300 hover:bg-brand-700 focus:outline-none focus:ring-2 focus:ring-brand-500 focus:ring-offset-2">
        Ver todos los artículos
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {featuredPosts.map((post) => (
        <FeaturedBlogPost { ...post } />
      ))}
    </div>
  </div>
</section>
